/* ===== Sidebar Item ===== */
function SidebarItem({ to, icon, label, open }) {
  return (
    <li>
      <Link
        to={to}
        className={`flex items-center gap-4 py-2.5 p-3  rounded-md hover:bg-white hover:text-[#2a2185] transition-all ${
          open ? "justify-start" : "justify-center"
        }`}
      >
        <span className="text-[20px]">{icon}</span>
        {open && <span className="text-[15px]">{label}</span>}
      </Link>
    </li>
  );
}

/* ===== Dashboard Card Component ===== */
function DashboardCard({ title, value, color, cardTitle }) {
  return (
    <div
      className={`p-3.5 text-[#2a2185] rounded-xl shadow-sm ${color} hover:bg-[#2a2185] hover:text-white transition duration-300`}
    >
      <div className="flex items-center justify-between">
        <h2 className="text-[18px] font-medium">{title}</h2>
        <h4 className="text-[15px] font-medium">{cardTitle}</h4>
      </div>
      <p className="text-3xl font-bold mt-2">{value}</p>
    </div>
  );
} -->

